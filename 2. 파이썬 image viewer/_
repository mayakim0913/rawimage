from Pyside import QtGui, QtCore

import sys
import platform

class MayaWindow(QtGui.Qwidget):
    def __init__(self):
        super(MayaWindow, self).__init__()
        
        #load image button
        self.button = QtGui.QpushButton("Load Image")
        self.button.clicked.connect(self.load_button) #def use

        #where viewer locate
        self.viewerlocation = QtGui.QLabel(self)

        #horizontal layout
        horizon = QtGui.QHBoxLayout() #what
        horizon.addWidget(self.button) 
        horizon.addStretch() #what

        #vertical layout
        vertical = QtGui.QVBoxLayout() #what
        vertical.addLayout(horizon) #then, change sequence up
        vertical.addWidget(self.viewerlocation)

        self.setLayout(vertical)

        #need!!!! what is it??
#        self.setAcceptDrops(Ture)
        self.show()

    def load_button(self):
        #where is file location
        self.imagelocation = QtGui.QFileDialog.getOpenFileName(self, "Open Image")
        self.imagesearch()

